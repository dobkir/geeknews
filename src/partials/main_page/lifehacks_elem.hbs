{{#if heading}}

<a href="#" class="lifehacks__link">
  <img src={{image}} alt="image: {{heading}}" width={{width}} height={{height}} class="img__responsive lifehacks__img">
</a>

<div class="lifehacks__link--content">
  <h3 class="lifehacks__link--title">
    <a class="lifehacks__link--title__link" href="#">
      {{heading}}
    </a>
  </h3>


  <div class="lifehacks__social">
    <div class="lifehacks__comments" title="Количество комментариев">
      <i class="fa fa-comments"></i>
      <a href="#disqus_thread" class="item__comments--count">{{comments_counter}}</a>
    </div>
    <span class="date">{{date}}</span>
  </div>

</div>

{{else}}
<p>Heading of this article is lost</p>
{{/if}}